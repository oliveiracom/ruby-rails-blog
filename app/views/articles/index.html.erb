<div id="BOX">
<h1>Listing Articles</h1>
 
<table>
  <tr>
    <th width="20%">Title</th>
    <th width="60%">Text</th>
    <th colspan="3" width="60%">Actions</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-info" %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New article', new_article_path, class: "btn" %>
<%= link_to 'Home', {controller: 'welcome'}, class: "btn btn-info"  %>

<%= render 'layouts/footer' %>
</div>